<script>

    {{#if session.eventIdForPrint}}
        window.open('/event/print-badge-layout/', '_blank', '');
    {{/if}}

var fields = [];
var activeObject=null;

$('.canvas').click(function(event){
    activeObject=event.target;

    $('#fontFamily').val(event.target.style.fontFamily);
    $('#fontSize').val(event.target.style.fontSize);
    $('#fontWeight').val(event.target.style.fontWeight);
    $('#fontStyle').val(event.target.style.fontStyle);
    $('#textAlign').val(event.target.style.textAlign);
});




$('#fontFamily').on('change', function(){
    if(activeObject){
        activeObject.style.fontFamily=this.value;
    }
    else {
        alert('Please select an item on the canvas first');
    }
});

$('#fontSize').on('change', function(){
    if(activeObject){
        activeObject.style.fontSize=this.value;
    }
    else {
        alert('Please select an item on the canvas first');
    }
});

$('#fontWeight').on('change', function(){
    if(activeObject){
        activeObject.style.fontWeight=this.value;
    }
    else {
        alert('Please select an item on the canvas first');
    }
});

$('#fontStyle').on('change', function(){
    if(activeObject){
        activeObject.style.fontStyle=this.value;
    }
    else {
        alert('Please select an item on the canvas first');
    }
});

$('#textAlign').on('change', function(){
    if(activeObject){
        activeObject.style.textAlign=this.value;
    }
    else {
        alert('Please select an item on the canvas first');
    }
});

var finish = function() {
    $('#action').val('finish');
    submitForm();
}

var testPrint = function(){
    $('#action').val('testprint');
    submitForm();
}

var submitForm = function(){
    
    //$('#fullName_top').val(txtFullName.top);
    //$('#fullName_left').val(txtFullName.left);
    //$('#fullName_width').val(txtFullName.width);

    for(var i=0; i<fields.length; i++){
        $('#' + fields[i] + '_top').val( $('#' + fields[i]).style.top  );
        $('#' + fields[i] + '_left').val( $('#' + fields[i]).style.left  );
        
        if(fields[i]!='barcode'){
            $('#' + fields[i] + '_width').val( $('#' + fields[i]).style.width  );
            $('#' + fields[i] + '_fontFamily').val( $('#' + fields[i]).style.fontFamily  );
            $('#' + fields[i] + '_fontSize').val( $('#' + fields[i]).style.fontSize  );
            $('#' + fields[i] + '_fontWeight').val( $('#' + fields[i]).style.fontWeight  );
            $('#' + fields[i] + '_fontStyle').val( $('#' + fields[i]).style.fontStyle  );
            $('#' + fields[i] + '_textAlign').val( $('#' + fields[i]).style.textAlign  );
        }
    }

    $('#form1').submit();
};

var resetLayout = function(){
    
    for(var i=0; i<fields.length; i++){
        canvas.item(i).set('top', (i+1) * 20);
        canvas.item(i).set('left',10);
        if(fields[i]!='barcode'){
            canvas.item(i).width=100;
            canvas.item(i).fontFamily='Calibri';
            canvas.item(i).fontSize=11;
            canvas.item(i).fontWeight='normal';
            canvas.item(i).fontStyle='normal';
            canvas.item(i).textAlign='left';
            canvas.item(i).angle=0;

        }

    }
    canvas.renderAll();
}

$(document).ready(function(){



    /*
    JsBarcode("#barcode", "19299259221626", {
    format: "CODE128",
    width: 1,
    height:40,
    margin: 5,
    textMargin: 0,
    fontSize: 10,
    displayValue: true
    });
    */
    
    var topIndex=0;

    {{#each fields}}
    topIndex = {{@index}};


    fields.push('{{this.fieldName}}');

    {{/each}}



});

      
</script>