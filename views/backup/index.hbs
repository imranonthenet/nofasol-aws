<ol class="breadcrumb">
  <li><a href="/event">Home</a></li>
  <li class="active">Manage Backups</li>
</ol>

<div class="row">
    <div class="col-md-12">
        <h1>Users</h1>
        {{#if hasErrors}}
            <div class="alert alert-danger">
                {{#each messages}}
                    <p>{{this}}</p>
                {{/each}}
            </div>
        {{/if}}

        <a href="/backup/create" class="btn btn-primary">Create Backup</a>
        <a href="/backup/upload" class="btn btn-primary">Restore</a>
        <p>Available space: {{availableSpace}} Mb our of {{totalSpace}} Mb</p>
            
            <table class="table">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Size</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                    {{#if fileInfo}}
                        <tr>
                            <td>{{fileInfo.filename}}</td>
                            <td>{{fileInfo.filesize}} Mb</td>
                            <td>{{formatDate fileInfo.filedate 'custom2'}}</td>
                            <td>
                                <a href="/uploads/dump.tar" class="btn btn-primary" >Download</a>
                            </td>
                        </tr>

                    {{/if}}
                </tbody>

            </table>

    </div>

</div>
